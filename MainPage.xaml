<Page
    x:Class="Nightclub.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nightclub"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/pozadina aplikacije.jpg"></ImageBrush>
        </Grid.Background>
        <Button x:Name="blagajna" Content="Blagajna" Margin="0,348,0,0" VerticalAlignment="Top" Height="125" Width="400" HorizontalAlignment="Center" FontSize="48" Foreground="White"/>
        <Button x:Name="rezervacija" Content="Rezervacije" Height="125" Width="400" HorizontalAlignment="Center" FontSize="48" Foreground="White"/>
        <Button x:Name="skladiste" Content="Skladište" Margin="0,608,0,0" VerticalAlignment="Top" Height="125" Width="400" RenderTransformOrigin="0.485,1.639" HorizontalAlignment="Center" FontSize="48" Foreground="White"/>
    </Grid>
</Page>
